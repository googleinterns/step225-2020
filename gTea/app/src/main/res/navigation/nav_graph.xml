<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MenuFragment">

    <fragment
        android:id="@+id/MenuFragment"
        android:name="com.nechaieva.gtea.fragments.MenuFragment"
        android:label="@string/menu_fragment_label"
        tools:layout="@layout/fragment_menu">

        <action
            android:id="@+id/action_makeOrder"
            app:destination="@id/OrderFragment">
        </action>
    </fragment>
    <fragment
        android:id="@+id/OrderFragment"
        android:name="com.nechaieva.gtea.fragments.OrderFragment"
        android:label="@string/order_fragment_label"
        tools:layout="@layout/fragment_order">

        <action
            android:id="@+id/action_backToMenu"
            app:destination="@id/MenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/AccountFragment"
        android:name="com.nechaieva.gtea.fragments.AccountFragment"
        android:label="@string/account_fragment_label"
        tools:layout="@layout/fragment_account">
    </fragment>
</navigation>