<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.nechaieva.gtea.Menu"
        android:label="@string/menu_fragment_label"
        tools:layout="@layout/fragment_nav">

        <action
            android:id="@+id/action_makeOrder"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.nechaieva.gtea.OrderFragment"
        android:label="@string/order_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_backToMenu"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>